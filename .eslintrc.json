{
    "extends": [
        "next/core-web-vitals",
        "alloy",
        "alloy/react",
        "alloy/typescript"
    ],
    "rules": {
        "@typescript-eslint/no-unused-vars": "warn",
        "@typescript-eslint/consistent-type-assertions": [
            "warn",
            {
                "assertionStyle": "as",
                "objectLiteralTypeAssertions": "allow",
                "react-hooks/rules-of-hooks": "off"
            }
        ],
        "react/jsx-no-useless-fragment": "off"
    }
}
